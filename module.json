{
  "module_id": "returns",
  "name": "Returns & Refunds",
  "name_es": "Devoluciones y Reembolsos",
  "version": "1.0.0",
  "description": "Handle product returns, refunds, and store credits for retail businesses.",
  "description_es": "Gestiona devoluciones de productos, reembolsos y créditos de tienda para negocios minoristas.",
  "author": "ERPlora",
  "author_email": "support@erplora.com",
  "license": "MIT",
  "category": "operations",
  "industries": [
    "retail",
    "ecommerce",
    "wholesale",
    "fashion",
    "electronics"
  ],
  "tags": [
    "returns",
    "refunds",
    "store-credit",
    "rma",
    "exchanges"
  ],
  "icon": "arrow-undo-outline",
  "homepage": "https://github.com/ERPlora/module-returns",
  "repository_url": "https://github.com/ERPlora/module-returns",
  "documentation": "https://docs.erplora.com/modules/returns",
  "dependencies": {
    "python": [],
    "modules": [
      "sales"
    ]
  },
  "compatibility": {
    "min_erplora_version": "1.0.0",
    "max_erplora_version": "2.0.0"
  },
  "features": {
    "i18n": true,
    "languages": [
      "en",
      "es"
    ],
    "api": true,
    "webhooks": false,
    "background_tasks": false,
    "supports_images": false,
    "supports_export": true,
    "supports_import": false
  },
  "permissions": [
    "returns.view_return",
    "returns.add_return",
    "returns.change_return",
    "returns.delete_return",
    "returns.view_returnreason",
    "returns.add_returnreason",
    "returns.change_returnreason",
    "returns.delete_returnreason",
    "returns.view_storecredit",
    "returns.add_storecredit",
    "returns.change_storecredit"
  ],
  "menu": {
    "label": "Returns",
    "label_es": "Devoluciones",
    "icon": "arrow-undo-outline",
    "url": "/modules/returns/",
    "order": 25
  },
  "settings": {
    "allow_no_receipt_returns": {
      "type": "boolean",
      "default": false,
      "label": "Allow Returns Without Receipt",
      "label_es": "Permitir Devoluciones Sin Recibo",
      "description": "Allow customers to return items without original receipt",
      "description_es": "Permitir a los clientes devolver artículos sin el recibo original"
    },
    "default_return_window_days": {
      "type": "number",
      "default": 30,
      "label": "Default Return Window (days)",
      "label_es": "Período de Devolución por Defecto (días)",
      "description": "Number of days after purchase within which returns are accepted",
      "description_es": "Número de días después de la compra en los que se aceptan devoluciones"
    },
    "store_credit_expiry_days": {
      "type": "number",
      "default": 365,
      "label": "Store Credit Expiry (days)",
      "label_es": "Vencimiento de Crédito de Tienda (días)",
      "description": "Number of days before store credits expire (0 = never)",
      "description_es": "Número de días antes de que los créditos de tienda expiren (0 = nunca)"
    }
  },
  "api_endpoints": [
    {
      "path": "/",
      "method": "GET",
      "description": "Returns list view"
    },
    {
      "path": "/create/",
      "method": "GET,POST",
      "description": "Create new return"
    },
    {
      "path": "/<int:pk>/",
      "method": "GET",
      "description": "Return detail"
    },
    {
      "path": "/reasons/",
      "method": "GET",
      "description": "List return reasons"
    },
    {
      "path": "/credits/",
      "method": "GET",
      "description": "List store credits"
    }
  ],
  "database": {
    "migrations": true,
    "models": [
      "ReturnsConfig",
      "ReturnReason",
      "Return",
      "ReturnLine",
      "StoreCredit"
    ]
  },
  "changelog": {
    "1.0.0": {
      "date": "2025-12-28",
      "changes": [
        "Initial release",
        "Return processing with multiple refund methods",
        "Configurable return reasons",
        "Store credit management",
        "Return line items tracking",
        "Multi-language support (English/Spanish)"
      ]
    }
  }
}
